<FileChoose>:
    title: "Open File"
    size_hint: .8, .8

    BoxLayout:
        orientation: "vertical"
        FileChooser:
            id: filechooser
            FileChooserListLayout

        Button:
            size_hint: (1, 0.1)
            text: "Load"
            on_release: root.load(filechooser.path, filechooser.selection)
            id: ldbtn


<MyGridLayout>:

    GridLayout:
        cols: 2
        rows: 1
        size: root.width, root.height

        GridLayout:

            size_hint_x: 0.2
            rows: 2
            
            TextInput:
                id: search_bar
                size_hint_y: None
                height: 30
                text: "Search"
                multiline: False
                on_text_validate: root.search()
                margins: [3, 3, 3, 3]

            BoxLayout:
                orientation: "vertical"
                Label:
                    id: search_matches
                    text: "No search query given"

        BoxLayout:
            
            cols: 2 
            orientation: "vertical"

            BoxLayout:
                size_hint: (1, 0.1)

                Button:
                    text: "New File"
                    size_hint: (.2, 1)
                    on_press: root.new()

                Button:
                    text: "Open File"
                    size_hint: (.2, 1)
                    on_press: root.open()

                Button:
                    text: "Save File"
                    size_hint: (.2, 1)
                    on_press: root.save()

                Button:
                    text: "Save As File"
                    size_hint: (.2, 1)
                    on_press: root.saveAs()

                Button:
                    text: "Link File (Exists)"
                    size_hint: (.2, 1)
                    on_press: root.link()

                Button:
                    text: "Link File (DNE)"
                    size_hint: (.2, 1)
                    on_press: root.link()

                Button:
                    text: "Delete File"
                    size_hint: (.2, 1)
                    on_press: root.delete()

                Button:
                    text: "Move Current File"
                    size_hint: (.2, 1)
                    on_press: root.moveFile()

                Button:
                    text: "Trigger Error"
                    size_hint: (.2, 1)
                    on_press: root.error_trigger()
            
            Label:
                id: file_open
                text:"No Open File"
                size_hint: (1, .04)

            TextInput:
                id: text_input
